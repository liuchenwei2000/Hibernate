<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="hibernate.callback.interceptor">
    <class name="Account" table="tb_accounts">
        <id name="id" column="pk_account">
            <generator class="increment"/>
        </id>
        <property name="no"/>
        <property name="amount"/>
    </class>
</hibernate-mapping>
