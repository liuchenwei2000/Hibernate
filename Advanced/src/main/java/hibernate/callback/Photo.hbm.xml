<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="hibernate.callback">
    <class name="Photo" table="tb_photos">
        <id name="id" column="pk_photo">
            <generator class="increment"/>
        </id>
        <property name="name"/>
        <property name="size"/>
    </class>
</hibernate-mapping>
